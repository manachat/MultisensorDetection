                         <Label text="B11" />
                         <ComboBox fx:id="b11ComboBoxT1" />
                         <Label text="B12" />
                         <ComboBox fx:id="b12ComboBoxT1" />
                     </children>
                 </VBox>
             </content>
         </ScrollPane>
          <HBox>
              <children>
                  <Label alignment="CENTER" text="Period 2:">
                  <HBox.margin>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin></Label>
                  <Button fx:id="fileChooseT2" alignment="CENTER" contentDisplay="CENTER" onMouseClicked="#fileChooseT2Click" text="Choose files">
                  <HBox.margin>
                     <Insets top="5.0" />
                  </HBox.margin></Button>
              </children>
          </HBox>
         <ScrollPane minHeight="200" minWidth="200.0">
           <content>
               <VBox fx:id="vBoxT2" spacing="5.0">
                   <children>
                       <Label prefWidth="200" text="B1" />
                       <ComboBox fx:id="b1ComboBoxT2" />
