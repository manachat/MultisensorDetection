<GridPane gridLinesVisible="true" prefHeight="425.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vafilonov.msd.controllers.MainSceneController">

    <MenuBar prefHeight="25.0" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3">
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem fx:id="saveMenu" mnemonicParsing="false" onAction="#saveMenuHandler" text="Save" />
                    <MenuItem fx:id="saveAsMenu" mnemonicParsing="false" onAction="#saveAsMenuHandler" text="Save as..." />
                    <MenuItem fx:id="loadMenu" mnemonicParsing="false" onAction="#loadMenuHandler" text="Load" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem fx:id="infoMenu" mnemonicParsing="false" onAction="#infoMenuHandler" text="Справка" />
                    <MenuItem fx:id="aboutMenu" mnemonicParsing="false" onAction="#aboutMenuHandler" text="О разработчике" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    
   <VBox fx:id="fileVBox" prefHeight="400.0" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <children>
          <HBox>
              <children>
                  <Label alignment="CENTER" text="Period 1:" />
                  <Button fx:id="fileChooseT1" onMouseClicked="#fileChooseT1Click" text="Choose files" />
              </children>
          </HBox>
         <ScrollPane minHeight="200" minWidth="200.0">
             <content>
                 <VBox fx:id="vBoxT1" spacing="5.0">
                     <children>
                         <Label prefWidth="200" text="B1">
                            <VBox.margin>
                                <Insets left="10.0" />
                            </VBox.margin>
                         </Label>
                         <ComboBox fx:id="b1ComboBoxT1" />
